{
   "functions": [
      {
         "source": "backend",
         "codebase": "default",
         "ignore": [
            "node_modules",
            ".git",
            "firebase-debug.log",
            "firebase-debug.*.log",
            "*.local"
         ],
         "predeploy": [
            "npm --prefix \"$RESOURCE_DIR\" run build"
         ],
         "runtime": "nodejs22"
      }
   ],
   "hosting": {
      "public": "dist/szte-web-kert-2025-fake-neptun/browser",
      "ignore": [
         "firebase.json",
         "**/.*",
         "**/node_modules/**"
      ],
      "rewrites": [
         {
            "source": "/api/**",
            "function": "api"
         },
         {
            "source": "**",
            "destination": "/index.html"
         }
      ]
   },
   "emulators": {
      "functions": {
         "port": 5000
      },
      "hosting": {
         "port": 5200
      },
      "ui": {
         "enabled": true,
         "port": 4000
      },
      "singleProjectMode": true
   }
}
